<div class="sidebar">
  <p class="tit">Font Style</p>
  <ul>
    <li>
      <label for="">size</label>
      <input type="range" min="12" max="100" value="16" step="1" id="jsFontSizeRange">
    </li>
    <li>
      <label for="">weight</label>
      <input type="range" min="100" max="900" value="400" step="10" id="jsFontWeightRange">
    </li>
    <li>
      <label for="">line height</label>
      <input type="range" min="1" max="2" value="1" step="0.1" id="jsLineHeightRange">
    </li>
    <li>
      <label for="">color</label>
      <input type="color" id="jsColor">
    </li>
    <li>
      <label for="">background</label>
      <input type="color" id="jsBackgroundColor" value="#ffffff">
    </li>
  </ul>
</div>
